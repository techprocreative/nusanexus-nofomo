# NusaNexus NoFOMO Backend Environment Configuration

# App Configuration
APP_NAME="NusaNexus NoFOMO API"
APP_VERSION="0.1.0"
DEBUG=false
SECRET_KEY="your-secret-key-change-in-production-min-32-chars"

# API Configuration
API_V1_STR="/api/v1"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration (comma-separated list)
ALLOWED_ORIGINS="http://localhost:3000,https://yourdomain.com"
ALLOWED_HOSTS="localhost,*.yourdomain.com,*.onrender.com"

# Database Configuration (Supabase)
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# OpenRouter AI Configuration
OPENROUTER_API_KEY="your-openrouter-api-key"
OPENROUTER_BASE_URL="https://openrouter.ai/api/v1"
OPENROUTER_MODEL="anthropic/claude-3-sonnet"

# Exchange API Configuration
BINANCE_API_URL="https://api.binance.com"
BYBIT_API_URL="https://api.bybit.com"

# Tripay Billing Configuration
TRIPAY_API_KEY="your-tripay-api-key"
TRIPAY_MERCHANT_CODE="your-tripay-merchant-code"
TRIPAY_PRIVATE_KEY="your-tripay-private-key"

# Monitoring & Logging
SENTRY_DSN="your-sentry-dsn"
LOG_LEVEL="INFO"