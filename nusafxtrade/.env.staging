# NusaNexus NoFOMO - Staging Environment Configuration
# This file should be used for staging/pre-production testing

# App Configuration
APP_NAME="NusaNexus NoFOMO - Staging"
APP_VERSION="0.1.0"
DEBUG=false
SECRET_KEY="staging-secret-key-change-in-production-1234567890"
ALLOWED_HOSTS="staging.nusafxtrade.com,*.onrender.com,localhost"
LOG_LEVEL="INFO"

# Database Configuration (Supabase Staging)
SUPABASE_URL="https://your-staging-project.supabase.co"
SUPABASE_KEY="your-staging-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-staging-supabase-service-role-key"
DATABASE_URL="postgresql://postgres:your-staging-postgres-password@db.staging.nusafxtrade.com:5432/postgres"

# Redis Configuration (Staging)
REDIS_URL="redis://redis.staging.nusafxtrade.com:6379"
REDIS_HOST="redis.staging.nusafxtrade.com"
REDIS_PORT="6379"
REDIS_PASSWORD="your-redis-password"
REDIS_DB=0

# OpenRouter AI Configuration
OPENROUTER_API_KEY="your-openrouter-api-key"
OPENROUTER_BASE_URL="https://openrouter.ai/api/v1"
OPENROUTER_MODEL="anthropic/claude-3-sonnet"

# Exchange API Configuration (Mix of testnet and production)
BINANCE_API_URL="https://api.binance.com"
BINANCE_TESTNET_URL="https://testnet.binance.vision"
BYBIT_API_URL="https://api.bybit.com"
BYBIT_TESTNET_URL="https://api-testnet.bybit.com"

# Tripay Billing Configuration (Staging)
TRIPAY_API_KEY="your-staging-tripay-api-key"
TRIPAY_MERCHANT_CODE="your-staging-tripay-merchant-code"
TRIPAY_PRIVATE_KEY="your-staging-tripay-private-key"
TRIPAY_CALLBACK_URL="https://staging.nusafxtrade.com/api/v1/payments/callback"

# Monitoring & Logging
SENTRY_DSN="your-staging-sentry-dsn"
SENTRY_ENVIRONMENT="staging"

# URLs
FRONTEND_URL="https://staging.nusafxtrade.com"
BACKEND_URL="https://staging-backend.onrender.com"
API_BASE_URL="https://staging-backend.onrender.com/api/v1"

# Feature Flags (Staging - mostly enabled)
FEATURE_AI_BUILDER=true
FEATURE_REAL_TRADING=false
FEATURE_PREMIUM_FEATURES=true
FEATURE_NOTIFICATIONS=true
FEATURE_ANALYTICS=true
FEATURE_EXPORT_DATA=true

# Performance (Medium)
WORKERS=2
MAX_CONNECTIONS=200
TIMEOUT=30
CONNECTION_POOL_SIZE=10

# Security
CORS_ALLOW_ORIGINS="https://staging.nusafxtrade.com,https://staging-frontend.onrender.com"
SESSION_TIMEOUT=1800
MAX_LOGIN_ATTEMPTS=5

# Backup
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7